<match <%= @attributes[:pattern] %>>
  <% @attributes.each do |key, value| -%>
  <% next if key.to_sym == :pattern %>
  <% if value.is_a?(Hash) %>
    <<%= (@attributes[:type] == 'copy') ? 'store' : key %>>
    <% value.each do |sub_key, sub_value| %>
      <%= sub_key -%>   <%= sub_value %>
    <% end %>
    </<%= (@attributes[:type] == 'copy') ? 'store' : key %>>
  <% else %>
    <%= key -%>   <%= value %>
  <% end %>
  <% end -%>
</match>